<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_courier_recovered_wizard_form" model="ir.ui.view">
        <field name="name">courier.recovered.wizard.form</field>
        <field name="model">courier.recovered.wizard</field>
        <field name="arch" type="xml">
            <form string="recovered Info">
                <group>
                    <field name="recovered_vendor_id"/>
                    <field name="vehicle_number"/>
                    <field name="recovered_date"/>
                    <field name="remarks"/>
                </group>
                <footer>
                    <button string="Move to Recovered" type="object" name="action_move_to_recovered"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_courier_recovered_wizard" model="ir.actions.act_window">
        <field name="name">recovered Info</field>
        <field name="res_model">courier.recovered.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_courier_recovered_wizard_form"/>

    </record>
</odoo>