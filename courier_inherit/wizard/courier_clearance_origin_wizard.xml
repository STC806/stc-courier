<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_courier_origin_wizard_form" model="ir.ui.view">
        <field name="name">courier.origin.wizard.form</field>
        <field name="model">courier.origin.wizard</field>
        <field name="arch" type="xml">
            <form string="origin Info">
                <group>
                    <field name="origin_name_id"/>
                    <field name="origin_date"/>
                    <field name="remark"/>
                </group>
                <footer>
                    <button string="Move to origin" type="object" name="action_move_to_origin"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_courier_origin_wizard" model="ir.actions.act_window">
        <field name="name">origin Info</field>
        <field name="res_model">courier.origin.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_courier_origin_wizard_form"/>

    </record>
</odoo>