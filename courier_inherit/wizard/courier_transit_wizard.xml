<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_courier_transit_wizard_form" model="ir.ui.view">
        <field name="name">courier.transit.wizard.form</field>
        <field name="model">courier.transit.wizard</field>
        <field name="arch" type="xml">
            <form string="transit Info">
                <group>
                    <field name="transit_date"/>
                    <field name="remarks"/>
                </group>
                <footer>
                    <button string="Move to transit" type="object" name="action_move_to_transit"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_courier_transit_wizard" model="ir.actions.act_window">
        <field name="name">transit Info</field>
        <field name="res_model">courier.transit.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_courier_transit_wizard_form"/>

    </record>
</odoo>