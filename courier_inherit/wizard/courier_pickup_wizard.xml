<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_courier_pickup_wizard_form" model="ir.ui.view">
        <field name="name">courier.pickup.wizard.form</field>
        <field name="model">courier.pickup.wizard</field>
        <field name="arch" type="xml">
            <form string="Pickup Info">
                <group>
                    <field name="pickup_vender"/>
                    <field name="vehicle_number"/>
                    <field name="person_name"/>
                    <field name="pickup_person_contact"/>
                    <field name="pickup_date"/>
                    <field name="remark"/>
                </group>
                <footer>
                    <button string="Move to driver" type="object" name="action_move_to_pickup"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_courier_pickup_wizard" model="ir.actions.act_window">
        <field name="name">Pickup Info</field>
        <field name="res_model">courier.pickup.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_courier_pickup_wizard_form"/>

    </record>
</odoo>