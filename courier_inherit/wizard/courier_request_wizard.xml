                    <field name="drs_date" invisible="show_delivery_run_sheet == False"/>
                    <field name="drs_name" invisible="show_delivery_run_sheet == False"/>
                    <field name="drs_vehicle_number" invisible="show_delivery_run_sheet == False"/>
                    <field name="drs_person_contact" invisible="show_delivery_run_sheet == False"/>


                    <!--                    delivered-->

                    <field name="show_delivered" invisible="1"/>
                    <!--                    <field name="delivered_contact_det"/>-->
                    <field name="receiver_number" invisible="show_delivered == False"/>
                    <field name="delivered_date" invisible="show_delivered == False"/>
                    <field name="delivered_remarks" invisible="show_delivered == False"/>


                    <!--                    onhold-->

                    <field name="show_onhold" invisible="1"/>
                    <field name="onhold_date" invisible="show_onhold == False"/>
                    <field name="custom_clear_remarks" invisible="show_onhold == False"/>

                    <!--                    on transit-->

                    <field name="show_in_transit" invisible="1"/>
                    <field name="transit_date" invisible="show_in_transit == False"/>
                    <field name="transit_remarks" invisible="show_in_transit == False"/>


                    <field name="next_state_id" readonly="1"/>
