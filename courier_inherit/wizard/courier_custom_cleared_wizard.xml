<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_courier_cleared_wizard_form" model="ir.ui.view">
        <field name="name">courier.cleared.wizard.form</field>
        <field name="model">courier.cleared.wizard</field>
        <field name="arch" type="xml">
            <form string="cleared Info">
                <group>
                    <field name="onhold_date"/>
                    <field name ="remarks"/>
                </group>
                <footer>
                    <button string="Move to onhold" type="object" name="action_move_to_cleared"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_courier_cleared_wizard" model="ir.actions.act_window">
        <field name="name">cleared Info</field>
        <field name="res_model">courier.cleared.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_courier_cleared_wizard_form"/>

    </record>
</odoo>