<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_courier_destination_wizard_form" model="ir.ui.view">
        <field name="name">courier.destination.wizard.form</field>
        <field name="model">courier.destination.wizard</field>
        <field name="arch" type="xml">
            <form string="destination Info">
                <group>
                    <field name="destination_name_id"/>
                    <field name="destination_date"/>
                    <field name="duties_taxes" widget="selection"/>
                    <field name="remarks"/>
                </group>
                <footer>
                    <button string="Move to destination" type="object" name="action_move_to_destination"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_courier_destination_wizard" model="ir.actions.act_window">
        <field name="name">destination Info</field>
        <field name="res_model">courier.destination.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_courier_destination_wizard_form"/>

    </record>
</odoo>