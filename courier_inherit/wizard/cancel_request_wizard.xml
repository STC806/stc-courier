<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_cancel_request_wizard_form" model="ir.ui.view">
        <field name="name">cancel.request.wizard.form</field>
        <field name="model">cancel.request.wizard</field>
        <field name="arch" type="xml">
            <form string="Set State and Cancellation Details">
                <group>
                    <field name="state_id"/>
                    <field name="cancel_date"/>
                    <field name="cancel_reason"/>
                    <field name="cancel_remarks"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_apply" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>