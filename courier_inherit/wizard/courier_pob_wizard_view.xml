<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_courier_pob_wizard_form" model="ir.ui.view">
        <field name="name">courier.pob.wizard.form</field>
        <field name="model">courier.pob.wizard</field>
        <field name="arch" type="xml">
            <form string="POB Info">
                <group>
                    <field name="vendor_id"/>
                    <field name="vehicle_number"/>
                    <field name="pickup_datetime"/>
                    <field name="pickup_temperature"/>
                    <field name="remarks"/>
                </group>
                <footer>
                    <button string="Move to Parcel on Board" type="object" name="action_move_to_pob"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_courier_pob_wizard" model="ir.actions.act_window">
        <field name="name">POB Info</field>
        <field name="res_model">courier.pob.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_courier_pob_wizard_form"/>

    </record>
</odoo>