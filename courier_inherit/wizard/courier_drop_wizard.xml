<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_courier_drop_wizard_form" model="ir.ui.view">
        <field name="name">courier.drop.wizard.form</field>
        <field name="model">courier.drop.wizard</field>
        <field name="arch" type="xml">
            <form string="drop Info">
                <group>
                    <field name="drop_vender"/>
                    <field name="vehicle_number"/>
                    <field name="drop_date"/>
                    <field name="remark"/>
                    
                </group>
                <footer>
                    <button string="Move to Drop" type="object" name="action_move_to_drop" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_courier_drop_wizard" model="ir.actions.act_window">
        <field name="name">drop Info</field>
        <field name="res_model">courier.drop.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_courier_drop_wizard_form"/>

    </record>
</odoo>