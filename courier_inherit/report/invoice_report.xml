<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="custom_report_taxinvoice" inherit_id="account.report_invoice_document">


        <xpath expr="//div[@class='page mb-4']/table[@name='invoice_line_table']/thead/tr/th[1]"
               position="before">
            <th style="text-align:left">SL.<br/>NO.
            </th>
        </xpath>
        <xpath expr="//t[@name='account_invoice_line_accountable']/td[1]" position="before">
            <td>
                <span>
                    <t t-esc="serial_number"/>
                </span>
                <!--              <span t-if="line.product_id.l10n_in_hsn_code" t-field="line.product_id.l10n_in_hsn_code"></span>-->
            </td>
        </xpath>
        <xpath expr="//div[@class='page mb-4']/table[@name='invoice_line_table']/thead/tr/th[1]" position="before">
            <t t-set="serial_number" t-value="1"/>
        </xpath>
        <xpath expr="//t[@name='account_invoice_line_accountable']/td[6]" position="after">
            <t t-set="serial_number" t-value="serial_number + 1"/>
        </xpath>

        <xpath expr="//div[@class='page mb-4']/table[@name='invoice_line_table']/thead/tr/th[@name='th_quantity']"
               position="attributes">
            <attribute name="style">display:none;</attribute>
        </xpath>
        <xpath expr="//div[@class='page mb-4']/table[@name='invoice_line_table']/thead/tr/th[@name='th_priceunit']"
               position="attributes">
            <attribute name="style">display:none;</attribute>
        </xpath>
        <xpath expr="//div[@class='page mb-4']/table[@name='invoice_line_table']/thead/tr/th[@name='th_taxes']"
               position="before">
            <th>
                Non Taxable
            </th>
        </xpath>

        <xpath expr="//t[@name='account_invoice_line_accountable']/td[@name='td_quantity']"
               position="attributes">
            <attribute name="style">display:none;</attribute>
        </xpath>
        <xpath expr="//t[@name='account_invoice_line_accountable']/td[@name='td_price_unit']"
               position="attributes">
            <attribute name="style">display:none;</attribute>
        </xpath>
        <xpath expr="//t[@name='account_invoice_line_accountable']/td[@name='td_taxes']"
               position="before">
            <th style="border-right:solid 1px black">0</th>
        </xpath>

        <xpath expr="//div[@class='page mb-4']/table[@name='invoice_line_table']/tbody//t[4]"
               position="after">
            <tr>
                <th colspan="2" style="border-right:solid 1px black;border-top:solid 1px black;">Subtotal</th>
                <th style="border-right:solid 1px black;border-top:solid 1px black;">0</th>
                <td style="border-right:solid 1px black;border-top:solid 1px black;">0</td>
                <td style="text-align:right;border-top:solid 1px black;">0</td>
            </tr>
        </xpath>

        <xpath expr="//div[2]/div/div[2]" position="after">
            <div class="container-fluid px-0 border border-dark">
                <div class="row g-0">
                    <t t-if="o.courier_request_id">
                        <div class="col-4 p-2" name="origin">
                            <strong>Courier No :</strong>

                            <span t-field="o.courier_request_id.name">SO123</span>
                        </div>

                        <div class="col-4 p-2" name="origin">
                            <strong>Study No :</strong>
                            <span t-field="o.courier_request_id.study_no">SO123</span>
                        </div>

                        <div class="col-4 p-2" name="origin">
                            <strong>Purchase Order :</strong>
                            <span t-field="o.courier_request_id.purchase_order">SO123</span>
                        </div>
                    </t>
                </div>

                <div class="row g-0">
                    <t t-if="o.courier_request_id">
                        <div class="col-4 p-2" name="origin">
                            <strong>Total No Pieces :</strong>
                            <span t-field="o.courier_request_id.courier_lines[0].quantity">SO123</span>
                        </div>

                        <div class="col-4 p-2" name="origin">
                            <strong>Date :</strong>
                            <!-- Example: <span t-field="o.courier_request_id.date">SO123</span> -->
                        </div>

                        <div class="col-4 p-2" name="origin">
                            <strong>Temperature :</strong>
                            <span t-field="o.courier_request_id.courier_lines[0].temperature">SO123</span>
                        </div>
                    </t>
                </div>

                <div class="row g-0">
                    <t t-if="o.courier_request_id">
                        <div class="col-4 p-2" name="origin">
                            <strong>Total Chargable :</strong>
                            <!-- Example: <span t-field="o.courier_request_id.total_chargable">SO123</span> -->
                        </div>

                        <div class="col-4 p-2" name="origin">
                            <strong>Booking Ref :</strong>
                            <br/>
                            <!-- Example: <span t-field="o.courier_request_id.booking_ref">SO123</span> -->
                        </div>

                        <div class="col-4 p-2" name="origin">
                            <strong>Chargable Ref :</strong>
                            <!-- Example: <span t-field="o.courier_request_id.chargable_ref">SO123</span> -->
                        </div>
                    </t>
                </div>

                <div class="row g-0">
                    <t t-if="o.courier_request_id">
                        <div class="col-12 p-2" name="origin">
                            <strong>Content Desc :</strong>
                            <span t-field="o.courier_request_id.courier_lines[0].description">SO123</span>
                        </div>
                    </t>
                </div>
            </div>
        </xpath>


        <xpath expr="//div[@class='row']" position="replace">
            <div class="row">
                <t t-if="o.courier_request_id">
                    <div class="col-6" name="from_address">
                        <!--                        <strong>From:</strong>-->
                        <div>
                            <span t-field="o.courier_request_id.account_id.name"/>
                        </div>
                        <div class="o_address_format">
                            <div>
                                <span t-field="o.courier_request_id.account_street"/>
                            </div>
                            <t t-if="o.courier_request_id.account_street2">
                                <div>
                                    <span t-field="o.courier_request_id.account_street2"/>
                                </div>
                            </t>
                            <div>
                                <span t-field="o.courier_request_id.account_city"/>
                            </div>
                            <div>
                                <span t-field="o.courier_request_id.account_state_id.name"/>
                            </div>
                            <div>
                                <span t-field="o.courier_request_id.account_zip"/>
                            </div>
                            <div>
                                <span t-field="o.courier_request_id.account_country_id.name"/>
                            </div>
                        </div>
                    </div>

                    <div class="col-6" name="to_address">
                        <div>GSTIN:
                            <span>36AALCC0983C1ZQ</span>
                            <!--                            <span t-field="o.courier_request_id.customer_acc_no"/>-->
                        </div>
                        <div>State code:
                            <!--                            <span t-field="o.courier_request_id.customer_acc_no"/>-->
                        </div>
                        <div>SAC code:
                            <span>996812</span>
                        </div>
                        <div>Account No :
                            <span t-field="o.courier_request_id.customer_acc_no"/>
                        </div>
                        <div>Invoice No :
                            <span t-field="o.name"/>
                        </div>
                        <div>Invoice Date :
                            <span t-field="o.invoice_date"/>
                        </div>
                    </div>
                </t>
                <t t-else="">
                    <t t-if="o.partner_shipping_id and (o.partner_shipping_id != o.partner_id)">
                        <div class="col-6">
                            <t t-set="information_block">
                                <div groups="account.group_delivery_invoice_address" name="shipping_address_block">
                                    <strong>Shipping Address:</strong>
                                    <div t-field="o.partner_shipping_id"
                                         t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                                </div>
                            </t>
                        </div>
                        <div class="col-6" name="address_not_same_as_shipping">
                            <t t-set="address">
                                <address class="mb-0" t-field="o.partner_id"
                                         t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                                <div t-if="o.partner_id.vat" id="partner_vat_address_not_same_as_shipping">
                                    <t t-if="o.company_id.account_fiscal_country_id.vat_label"
                                       t-out="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label"/>
                                    <t t-else="">Tax ID</t>:
                                    <span t-field="o.partner_id.vat"/>
                                </div>
                            </t>
                        </div>
                    </t>
                    <t t-elif="o.partner_shipping_id and (o.partner_shipping_id == o.partner_id)">
                        <div class="offset-col-6 col-6" name="address_same_as_shipping">
                            <t t-set="address">
                                <address class="mb-0" t-field="o.partner_id"
                                         t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                                <div t-if="o.partner_id.vat" id="partner_vat_address_same_as_shipping">
                                    <t t-if="o.company_id.account_fiscal_country_id.vat_label"
                                       t-out="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label"/>
                                    <t t-else="">Tax ID</t>:
                                    <span t-field="o.partner_id.vat"/>
                                </div>
                            </t>
                        </div>
                    </t>
                    <t t-else="">
                        <div class="offset-col-6 col-6" name="no_shipping">
                            <t t-set="address">
                                <address class="mb-0" t-field="o.partner_id"
                                         t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                                <div t-if="o.partner_id.vat" id="partner_vat_no_shipping">
                                    <t t-if="o.company_id.account_fiscal_country_id.vat_label"
                                       t-out="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label"/>
                                    <t t-else="">Tax ID</t>:
                                    <span t-field="o.partner_id.vat"/>
                                </div>
                            </t>
                        </div>
                    </t>
                </t>
            </div>

        </xpath>

        <xpath expr="//div[2]/div/table" position="before">
            <t t-if="o.courier_request_id">
                <div class="row g-3">
                    <div class="col-6 border border-dark p-2" name="from_address">
                        <strong>From:</strong>
                        <div>
                            <span t-field="o.courier_request_id.sender_id.name"/>
                        </div>
                        <div class="o_address_format">
                            <div>
                                <span t-field="o.courier_request_id.sender_street"/>
                            </div>
                            <t t-if="o.courier_request_id.sender_street2">
                                <div>
                                    <span t-field="o.courier_request_id.sender_street2"/>
                                </div>
                            </t>
                            <div>
                                <span t-field="o.courier_request_id.sender_city"/>
                            </div>
                            <div>
                                <span t-field="o.courier_request_id.sender_state_id.name"/>
                            </div>
                            <div>
                                <span t-field="o.courier_request_id.sender_zip"/>
                            </div>
                            <div>
                                <span t-field="o.courier_request_id.sender_country_id.name"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 border border-dark p-2" name="to_address">
                        <strong>To:</strong>
                        <div>
                            <span t-field="o.courier_request_id.receiver_id.name"/>
                        </div>
                        <div class="o_address_format">
                            <div>
                                <span t-field="o.courier_request_id.receiver_street"/>
                            </div>
                            <t t-if="o.courier_request_id.receiver_street2">
                                <div>
                                    <span t-field="o.courier_request_id.receiver_street2"/>
                                </div>
                            </t>
                            <div>
                                <span t-field="o.courier_request_id.receiver_city"/>
                            </div>
                            <div>
                                <span t-field="o.courier_request_id.receiver_state_id.name"/>
                            </div>
                            <div>
                                <span t-field="o.courier_request_id.receiver_zip"/>
                            </div>
                            <div>
                                <span t-field="o.courier_request_id.receiver_country_id.name"/>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </xpath>

        <xpath expr="//div[2]/div/h2" position="attributes">
            <attribute name="style">display:none</attribute>
        </xpath>
        <xpath expr="//div[2]/div/div[2]/div[1]" position="attributes">
            <attribute name="style">display:none</attribute>
        </xpath>
        <xpath expr="//div[2]/div/div[2]/div[2]" position="attributes">
            <attribute name="style">display:none</attribute>
        </xpath>


    </template>

</odoo>
