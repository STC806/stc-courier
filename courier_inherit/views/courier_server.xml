<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_open_courier_request_wizard" model="ir.actions.server">
        <field name="name">Move to Next State</field>
        <field name="model_id" ref="model_dev_courier_request"/>
        <field name="binding_model_id" ref="model_dev_courier_request"/>
        <field name="state">code</field>
<!--        <field name="usage">action</field>-->
        <field name="binding_view_types">list</field>
        <field name="code">
            action = {
            'name': 'Update to Next State',
            'type': 'ir.actions.act_window',
            'res_model': 'courier.request.wizard',
            'view_mode': 'form',
            'target': 'new',

            }
<!--            'context': {'active_ids': active_ids},-->
        </field>
    </record>


    <record id="action_open_courier_request_wizard_cancel" model="ir.actions.server">
    <field name="name">Move to Cancel State</field>
    <field name="model_id" ref="model_dev_courier_request"/>
    <field name="binding_model_id" ref="model_dev_courier_request"/>
    <field name="state">code</field>
    <field name="binding_view_types">list</field>
    <field name="code">
        action = {
            'name': 'Cancel Courier Request',
            'type': 'ir.actions.act_window',
            'res_model': 'cancel.request.wizard',
            'view_mode': 'form',
            'target': 'new',
        }

        <!--            'context': {'active_ids':},-->

    </field>
</record>


</odoo>