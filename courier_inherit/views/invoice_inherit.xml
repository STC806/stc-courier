<odoo>
    <data>
        <record model="ir.ui.view" id="account_invoice_form_inherit">
            <field name="name">Account Invoice</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='invoice_tab']//field[@name='name']" position="attributes">
                    <!--                <field name="product_description"/>-->
                    <attribute name="string">Description</attribute>
                </xpath>
                <xpath expr="//form//field[@name='courier_request_id']" position="after">
                    <field name="courier_ids" widget="many2many_tags" invisible="1"/>
                    <field name="is_consolidate_invoice" invisible="1"/>

                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" type="object" name="action_view_courier_request"
                            icon="fa-pencil-square-o"
                            >
                        <field name="courier_request_count" widget="statinfo" string="Courier Request"
                               />
                    </button>

                </xpath>

            </field>
        </record>
    </data>
</odoo>
